
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Numberth></th>
      <th scope="col">Address</th>
       <th scope="col">Delete</th>
       <th scope="col">Show User Orders</th>


      </tr>
    </thead>
    <tbody>
     <% @users.each do |user| %>
     <tr>
      <th scope="row"><%=user.id%></th>
      <td><%=user.name%></td>
      <td><%=user.email%></td>
      <td><%=user.number%></td>
      <td><%=user.address%></td>
      <td> <%= link_to "Delete Account", user_path(user.id), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } , class:"btn btn-warning"%></td>

      <td> <%= link_to "Show Orders", users_orders_book_orders_path(user.id), class:"btn btn-warning"%></td>
      
    </tr>
    <%end%>
  </tbody>
</table>