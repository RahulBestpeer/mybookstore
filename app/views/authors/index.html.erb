 <% if flash[:message] != nil %>
 <div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Message!</strong> <%= flash[:message] %></strong>
  <button type="button"  class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<%end%>

<div class="container">
  <div class="row">
    <%  
        @authors.each do |author|
    %>
    <div class="col-sm-4 mt-2">
      <div class="card" style="width: 18rem;">
        <!-- <img src="images/log.png" class="card-img-top" alt="..."> -->
        <div class="card-body">
         <h5 class="card-title">Author Name: <%=author.name%></h5>
         <p class="card-text">Author Price : <%=author.dob%></p>
          <% if current_account.type == "Admin" %>
          <a href="/authors/<%=author.id%>/edit" class="btn btn-primary">update</a>
         
          <%= link_to "Destroy", author_path(author.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } , class:"btn btn-warning"%>
          <%else%>

          <%end%>
          <a href="/authors/<%=author.id%>" class="btn btn-success">show</a>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>